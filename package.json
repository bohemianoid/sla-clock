{
  "name": "sla-clock",
  "productName": "SLA Clock",
  "version": "0.4.0",
  "description": "Remaining SLA time in your menu bar",
  "main": "dist-js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "lint": "tsc && xo",
    "test": "npm run lint",
    "start": "tsc && electron .",
    "pack": "tsc && electron-builder --dir",
    "dist": "tsc && electron-builder --macos"
  },
  "repository": "github:bohemianoid/sla-clock",
  "author": "Simon HÃ¤fliger <code@simonhaefliger.ch> (https://simonhaefliger.ch)",
  "license": "MIT",
  "dependencies": {
    "compare-versions": "^3.6.0",
    "cron": "^1.8.2",
    "date-fns": "^2.25.0",
    "electron-debug": "^3.2.0",
    "electron-store": "^8.0.1",
    "element-ready": "^5.0.0",
    "is-online": "^9.0.1",
    "is-url-superb": "^5.0.0",
    "p-wait-for": "^3.2.0"
  },
  "devDependencies": {
    "electron": "^9.4.4",
    "electron-builder": "22.11.7",
    "typescript": "^4.4.3",
    "xo": "^0.39.1"
  },
  "xo": {
    "envs": [
      "browser",
      "node"
    ],
    "space": true,
    "rules": {
      "@typescript-eslint/no-floating-promises": "off",
      "import/no-anonymous-default-export": "off"
    }
  },
  "build": {
    "files": [
      "**/*",
      "!media${/*}"
    ],
    "appId": "ch.bohemianoid.sla-clock",
    "mac": {
      "darkModeSupport": true
    }
  }
}
