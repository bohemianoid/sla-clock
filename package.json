{
  "name": "sla-clock",
  "productName": "SLA Clock",
  "version": "0.3.1",
  "description": "Remaining SLA time in your menu bar",
  "main": "dist-js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "tsc && electron .",
    "pack": "tsc && electron-builder --dir",
    "dist": "tsc && electron-builder --macos"
  },
  "repository": "github:simonroth/sla-clock",
  "author": "Simon Roth <code@simonroth.ch> (https://simonroth.ch)",
  "license": "MIT",
  "dependencies": {
    "cron": "^1.8.2",
    "date-fns": "^2.15.0",
    "electron-debug": "^3.1.0",
    "electron-util": "^0.14.2",
    "element-ready": "^4.1.1",
    "electron-store": "^6.0.0",
    "is-online": "^8.4.0",
    "is-url-superb": "^4.0.0",
    "p-wait-for": "^3.1.0"
  },
  "devDependencies": {
    "electron": "^9.1.0",
    "electron-builder": "^22.7.0",
    "typescript": "^3.9.7"
  },
  "build": {
    "files": [
      "**/*",
      "!media${/*}"
    ],
    "appId": "ch.simonroth.sla-clock",
    "mac": {
      "darkModeSupport": true
    }
  }
}
